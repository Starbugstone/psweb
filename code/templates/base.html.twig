<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}TeamStarbug PZ Server{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link href="css/main.css" rel="stylesheet">
        {% block stylesheets %}
        {% endblock %}

        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous" defer></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous" defer></script>
        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
    {# read and display all flash messages #}
    {% for label, messages in app.flashes %}

        {% set alertValue = 'warning' %}
        {% if label == 'success' %}
            {% set alertValue = 'success' %}
        {% elseif label == 'error' %}
            {% set alertValue = 'danger' %}
        {% endif %}

        {% for message in messages %}
            <div class="alert alert-{{ alertValue}} flash-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}
    <div class="container text-center rounded-bottom">
        <div class="row header">
            <div class="col-md-12">
                <img src="img/banner.jpg" alt="TeamStarbug Logo" class="img-fluid">
                <h1>TeamStarbug PZ Server</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 main">
            {% block body %}{% endblock %}
            </div>
            <div class="col-md-4 sidebar">
                {% block sidebar %}{% endblock %}
            </div>
        </div>
    </div>
    </body>
</html>
